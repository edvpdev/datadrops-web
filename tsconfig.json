{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/mocks/*": ["__mocks__/*"],
      "@/actions/*": ["app/actions/*"],
      "@/components/*": ["features/*"],
      "@/features/*": ["features/*"],
      "@/pages/*": ["pages/*"],
      "@/app/*": ["app/*"],
      "@/styles/*": ["styles/*"],
      "@/ui/*": ["app/ui/*"],
      "@/lib/*": ["lib/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.ts",
    "jest.setup.ts"
, "jest.polyfills.js"  ],
  "exclude": ["node_modules"]
}
